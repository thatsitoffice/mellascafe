---
import { FEATURES } from "../../data/home";
import Section from "./Section.astro";
import FeatureIcon from "../react/FeatureIcon";
---

<Section>
  <div class="text-center mb-16">
    <span class="text-accent uppercase tracking-widest text-xs font-bold mb-2 block">Our Features</span>
    <h2 class="text-3xl md:text-5xl font-serif text-white">Why People Choose Us?</h2>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
    {FEATURES.map((feature) => (
      <div 
        key={feature.id}
        class="group p-8 border border-white/10 hover:border-accent bg-surface hover:-translate-y-2 transition-all duration-300 relative overflow-hidden"
      >
        <div class="absolute top-0 right-0 w-20 h-20 bg-accent/5 rounded-bl-full -mr-10 -mt-10 transition-all group-hover:bg-accent/10" />
        
        <FeatureIcon client:load icon={feature.icon} />

        <h3 class="text-xl font-serif font-bold text-white mb-4 group-hover:text-accent transition-colors">
          {feature.title}
        </h3>
        
        <p class="text-white/60 leading-relaxed">
          {feature.description}
        </p>
      </div>
    ))}
  </div>
</Section>
